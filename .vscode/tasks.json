{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Jekyll server",
            "type": "shell",
            "command": "touch index.html && bundle exec jekyll serve --incremental --livereload --baseurl='' ",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Stage today's Jekyll blog post",
            "type": "shell",
            "command": "_scripts/new-post.sh",
            "group": {
                "kind": "none",
                "isDefault": false
            }
        },
        {
            "label": "Generate diary template",
            "type": "shell",
            "command": "python",
            "args": [
                "_scripts/generate.py",
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            }
        },
        {
            "label": "Stage and generate",
            "dependsOn": [
                "Stage today's Jekyll blog post",
                "Generate diary template"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Optimize PNG files recently modified",
            "type": "shell",
            "command": "optipng $(find assets/images -type f -iname \\*.png -mtime -1)",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Update Gemfile.lock: execute `bundle update`",
            "type": "process",
            "command": "bundle",
            "args": [
                "update"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Check how many days",
            "type": "process",
            "command": "python",
            "args": [
                "-c",
                "from datetime import date; print((date.today() - date(2020, 4, 27)).days + 1)"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
