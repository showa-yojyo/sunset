{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Jekyll server",
            "type": "shell",
            "command": "touch index.html archive/*.html && bundle exec jekyll serve --incremental --no-watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Optimize PNG files recently modified",
            "type": "shell",
            "command": "optipng $(find assets/images -type f -iname \\*.png -mtime -24)",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Update Gemfile.lock: execute `bundle update`",
            "type": "process",
            "command": "bundle",
            "args": [
                "update"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
        {
            "label": "Check how many days",
            "type": "process",
            "command": "python",
            "args": [
                "-c",
                "from datetime import date; print((date.today() - date(2020, 4, 27)).days + 1)"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
